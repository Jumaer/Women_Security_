<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="4dp"
    >




    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"/>
    <EditText
        android:textColorHint="#B0D880"
        android:textColor="#B0D880"
        android:id="@+id/etTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Receiver's Email Address!"
        android:inputType="textEmailAddress"
        android:singleLine="true" />
    <EditText
        android:textColorHint="#B0D880"
        android:paddingLeft="5dp"
        android:textColor="#B0D880"
        android:id="@+id/etSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter Subject"
        android:singleLine="true" />
    <EditText

        android:padding="10dp"
        android:textColorHint="#B0D880"
        android:textColor="#B0D880"
        android:background="#F6F8F6"
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp"
        android:gravity="top|start"
        android:hint="Compose Email"
        android:inputType="textMultiLine" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:textColor="#497C0C"
            android:background="@drawable/designradious"
            android:id="@+id/btSend"
            android:layout_width="80dp"
            android:layout_height="38dp"

            android:text="Send" />
        <Button
            android:layout_marginBottom="5dp"
             android:textAllCaps="false"
            android:textColor="#497C0C"
            android:background="@drawable/designradious"
            android:id="@+id/btAttachment"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:text="Attachment" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_green_light"
        android:id="@+id/tvAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_action_send"
        android:visibility="gone" />
</LinearLayout>