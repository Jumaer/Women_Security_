<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Start_core"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.NoActionBar"
            android:background="#B0D880">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <Button
       android:drawableLeft="@drawable/family"
       android:id="@+id/round"
       android:background="@drawable/round_button"
       android:text="Parents"
       android:layout_marginTop="70dp"
       android:layout_centerHorizontal="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <Button
        android:drawableLeft="@drawable/police"
        android:id="@+id/round2"
        android:layout_below="@+id/round"
        android:background="@drawable/round_button"
        android:text="Police"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

    <include layout="@layout/content_main"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#B0D880"
        fab:menu_colorPressed="#B0D880"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_label="Your Options to move.."
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#B0D880"
        fab:menu_labels_colorPressed="#fff"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="true"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#706F6F"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="Call"
            fab:menu_colorNormal="#B0D880"

            fab:menu_colorRipple="#99d4d4d4"
            android:src="@drawable/call_show_final_icon"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="#B0D880"

            fab:fab_size="normal" />
        <com.github.clans.fab.FloatingActionButton
            app:fab_colorPressed="#B0D880"
            android:id="@+id/camera"
            android:layout_width="12sp"
            android:layout_height="12sp"
            fab:fab_label="Be Strong"
            fab:menu_colorNormal="#B0D880"

            fab:menu_colorRipple="#99d4d4d4"
            android:background="@color/colorPrimary"
            app:fab_colorNormal="@color/colorPrimary"
            android:src="@drawable/be_strong_women"
            fab:fab_size="normal" />

        <com.github.clans.fab.FloatingActionButton
            app:fab_colorPressed="#B0D880"
            android:id="@+id/record"
            android:layout_width="12sp"
            android:layout_height="12sp"
            android:background="@color/colorPrimary"
            fab:fab_label="Record Audio to trace "
            fab:menu_colorNormal="#B0D880"

            fab:menu_colorRipple="#99d4d4d4"
            app:fab_colorNormal="@color/colorPrimary"
            android:src="@drawable/display_record"
            fab:fab_size="normal" />

    </com.github.clans.fab.FloatingActionMenu>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
