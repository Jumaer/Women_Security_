<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_logo"
            android:layout_width="128sp"
            android:layout_height="128sp"
            android:layout_marginTop="18sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/app_logo"
            android:text="@string/app_info"
            android:textAlignment="center"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/layer_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            android:layout_below="@id/app_name"
            android:layout_marginLeft="18sp"
            android:layout_marginRight="8sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:layout_marginRight="28sp"
                android:paddingRight="28sp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:layout_marginLeft="28sp"
                android:paddingRight="28sp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_below="@id/layer_one"
            android:layout_margin="18sp"
            android:hint="Phone Number"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/fnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_below="@id/phone"
            android:layout_margin="18sp"
            android:hint="Friend's Number"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/lnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_below="@id/fnumber"
            android:layout_margin="18sp"
            android:hint="Family Number"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_below="@id/lnumber"
            android:layout_margin="18sp"
            android:hint="Email"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_below="@id/email"
            android:layout_margin="18sp"
            android:hint="Police Number"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/police"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18sp"
            android:layout_marginBottom="18sp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="Save"
                android:fontFamily="serif"
                android:textColor="@android:color/white"
                android:layout_marginRight="8sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/save_btn"
                android:layout_marginLeft="8sp"
                android:background="@android:color/holo_red_light"
                android:text="Skip"
                android:fontFamily="serif"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </RelativeLayout>



</ScrollView>