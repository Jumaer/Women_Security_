<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="94sp"
            android:layout_height="94sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

        <View
            android:id="@+id/dividier1"
            android:layout_width="match_parent"
            android:layout_below="@id/app_name"
            android:layout_height="1dp"
            android:layout_marginLeft="42sp"
            android:layout_marginRight="42sp"
            android:layout_marginTop="32sp"
            android:background="@android:color/holo_green_light" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividier1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32sp"
            android:text="About Us"
            android:onClick="navigationAction"
            android:textSize="26sp"
            android:fontFamily="serif"
            android:textColor="@android:color/black"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/about"
            android:layout_marginTop="8sp"
            android:text="Settings"
            android:onClick="navigationAction"
            android:layout_centerHorizontal="true"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:fontFamily="serif"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/settings"
            android:layout_marginTop="8sp"
            android:text="Help"
            android:onClick="navigationAction"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:fontFamily="serif"/>


        <View
            android:id="@+id/dividier2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="42sp"
            android:layout_marginRight="42sp"
            android:layout_marginTop="32sp"
            android:background="@android:color/holo_green_light"
            android:layout_below="@id/help" />
</RelativeLayout>
